<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginLeft="0dp"
            android:background="@android:color/background_light"
            app:srcCompat="@drawable/logo_splash" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="?android:attr/listDivider" />

        <ImageView
            android:id="@+id/bed"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:clickable="true"
            android:contextClickable="true"
            android:insetLeft="100dp"
            android:insetTop="0dp"
            android:insetRight="100dp"
            android:insetBottom="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/bed" />

        <TextView
            android:id="@+id/textViewBed"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="BED AVAILABILITY"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="?android:attr/listDivider" />

        <ImageView
            android:id="@+id/hospital"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:insetLeft="100dp"
            android:insetTop="0dp"
            android:insetRight="100dp"
            android:insetBottom="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/hospitals" />

        <TextView
            android:id="@+id/textViewHospital"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="HOSPITALS"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="?android:attr/listDivider" />

        <ImageView
            android:id="@+id/careCenter"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:insetLeft="100dp"
            android:insetTop="0dp"
            android:insetRight="100dp"
            android:insetBottom="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/carecenter" />

        <TextView
            android:id="@+id/textViewCare"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="CARE CENTERS"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="?android:attr/listDivider" />

        <ImageView
            android:id="@+id/helpline"
            android:layout_width="400dp"
            android:layout_height="200dp"
            android:insetLeft="100dp"
            android:insetTop="0dp"
            android:insetRight="100dp"
            android:insetBottom="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/helpline" />

        <TextView
            android:id="@+id/textViewHelpline"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="HELPLINE DETAILS"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />


        <View
            android:id="@+id/divider5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="?android:attr/listDivider" />

        <ImageView
            android:id="@+id/essentials"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:insetLeft="60dp"
            android:insetTop="0dp"
            android:insetRight="60dp"
            android:insetBottom="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/essentials" />

        <TextView
            android:id="@+id/textViewEssentials"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ESSENTIAL SERVICES"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>
</ScrollView>